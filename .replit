entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libxcrypt", "ocl-icd", "opencl-headers", "pkg-config", "qhull", "tcl", "tk", "xsimd", "nano", "lsof"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "gce"
ignorePorts = true

[workflows]
runButton = "Start Trading Bot"

[[workflows.workflow]]
name = "Run Trading Bot"
author = 43555514
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Manual Trading Bot"
author = 43555514
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Start Trading Bot"
author = 43555514
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Start Bot + Dashboard"
author = 43555514
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Stop Trading Bot"
author = 43555514
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python main.py\""

[[workflows.workflow]]
name = "Force Start Bot"
author = 43555514
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python force_start_bot.py"

[[workflows.workflow]]
name = "Emergency Cleanup"
author = 43555514
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python main.py\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python force_start_bot.py"

[[ports]]
localPort = 5000
externalPort = 80
